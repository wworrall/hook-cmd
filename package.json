{
  "name": "@wworrall/hook-cmd",
  "version": "2.0.0",
  "description": "Run commands on receipt of webhooks",
  "scripts": {
    "build": "npx tsc && mv ./bin/index.js ./bin/hook-cmd",
    "dev": "nodemon --exec \"npx ts-node index.ts\"",
    "start": "node dist"
  },
  "repository": "git://github.com/wworrall/hook-cmd.git",
  "author": "Will Worrall (github.com/wworrall)",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.0.1",
    "nodemon": "^2.0.9",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "delay": 1000,
    "ext": "ts,json",
    "ignore": [
      "dist/*"
    ]
  }
}
